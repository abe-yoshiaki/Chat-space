.chat-main__messages__message{data: {id: "#{message.id}"}}
  .chat-main__messages__message__upper-info
    %p.chat-main__messages__message__upper-info--user
      = message.user.name
    %p.chat-main__messages__message__upper-info--date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.chat-main__messages__message__message-text
    - if message.content.present?
      = message.content
    %br
    - if message.image.present?
      = image_tag message.image, class: 'lower-message__image'